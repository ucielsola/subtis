{
  "name": "@subtis/source",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "type:check": "tsc --noEmit",
    "biome:lint": "biome lint .",
    "biome:check": "biome check --write --unsafe .",
    "test": "bun --env-file=.env.development test",
    "test:watch": "bun --env-file=.env.development test --watch",
    "test:coverage": "bun --env-file=.env.development test --coverage",
    "type:coverage": "rm -rf coverage-ts && typescript-coverage-report -t 100 -i types.d.ts",
    "code:duplication": "jscpd --ignore 'packages/**/*.test.ts' packages/**/*.ts",
    "update:db:schemas": "cd packages/db && bun run generate:schemas",
    "update:db:dump": "cd packages/db && bun run generate:dump",
    "start:stremio": "cd packages/stremio && bun run start",
    "start:indexer:ws": "cd packages/indexer && bun run start:ws",
    "start:indexer:cron": "cd packages/indexer && bun run start:cron",
    "dev:web": "cd packages/web && bun run dev",
    "dev:api": "cd packages/api && bun run dev",
    "dev:cli": "cd packages/cli && bun run dev --",
    "dev:raycast": "cd packages/raycast && bun run dev",
    "dev:stremio": "cd packages/stremio && bun run dev",
    "dev:indexer:ws": "cd packages/indexer && bun run dev:ws",
    "dev:indexer:file": "cd packages/indexer && bun run dev:file",
    "dev:indexer:movies:year": "cd packages/indexer && bun run dev:movies:year",
    "dev:indexer:movies:name": "cd packages/indexer && bun run dev:movies:name",
    "dev:indexer:top-300": "cd packages/indexer && bun run dev:top-300",
    "dev:indexer:tv-shows": "cd packages/indexer && bun run dev:tv-shows",
    "dev:indexer:not-found-asc": "cd packages/indexer && bun run dev:not-found-asc",
    "dev:indexer:not-found-desc": "cd packages/indexer && bun run dev:not-found-desc",
    "dev:indexer:supabase-not-found": "cd packages/indexer && bun run dev:supabase-not-found",
    "dev:indexer:image-optimizer": "cd packages/indexer && bun run dev:image-optimizer",
    "deploy:web": "cd packages/web && bun run deploy",
    "deploy:api": "cd packages/api && bun run deploy",
    "deploy:stremio": "fly deploy -c fly-stremio.toml",
    "deploy:cli": "cd packages/cli && bun run build && bun run copy:bin",
    "deploy:real-time-indexer": "fly deploy -c fly-real-time-indexer.toml",
    "deploy:raycast": "npm install --package-lock-only && mv ./package-lock.json ./packages/raycast && cd packages/raycast && bun run deploy",
    "bump:deps": "taze -r -w",
    "update:deps": "bun bump:deps && bun clean:install",
    "clean:install": "bun pm cache rm && bun install --force"
  },
  "overrides": {
    "esm-env": "npm:esm-env-runtime@^0.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "jscpd": "^4.0.5",
    "taze": "^18.6.0",
    "typescript-coverage-report": "^1.1.0"
  }
}
