{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noDuplicateElseIf": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "style": {
        "useNodejsImportProtocol": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      }
    }
  },
  "files": {
    "include": ["packages/**/*.ts", "packages/**/*.tsx", "docs/**/*.json"],
    "ignore": [
      "node_modules",
      "dist",
      "*.d.ts",
      "packages/raycast",
      "packages/web/app/components/ui",
      "packages/indexer/torrent-grabber"
    ]
  }
}
